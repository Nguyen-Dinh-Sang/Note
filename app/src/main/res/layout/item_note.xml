<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_marginTop="@dimen/dp5"
    android:layout_marginLeft="@dimen/dp5"
    android:layout_marginRight="@dimen/dp5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="@dimen/dp5"
    app:cardCornerRadius="@dimen/dp5"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="@dimen/dp18"
            android:text="Title: đây là title của note test thử xem nó thế nào"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="@dimen/dp8"
            android:layout_marginLeft="@dimen/dp10"
            android:maxWidth="@dimen/dp200">
        </TextView>
        <TextView
            android:textColor="@color/colorBlack"
            android:textStyle="normal"
            android:textSize="@dimen/dp15"
            android:text="Content: đây là content test thử xem nó tới đâu rồi ok ok ok ok ok ok ok"
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="@dimen/dp7"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_below="@id/tv_title"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginBottom="@dimen/dp7">
        </TextView>
        <TextView
            android:textColor="@color/colorBlack"
            android:textStyle="normal"
            android:textSize="@dimen/dp18"
            android:text="Time đây là time"
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="@dimen/dp8"
            android:layout_alignParentRight="true"
            android:maxWidth="@dimen/dp110"
            android:layout_marginRight="@dimen/dp15">
        </TextView>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_menu_option"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_content"
            android:weightSum="3"
            android:paddingBottom="@dimen/dp18"
            android:paddingTop="@dimen/dp18">
            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp25"
                android:layout_weight="1"
                android:src="@drawable/ic_delete"
                android:background="@null">
            </ImageView>
            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp25"
                android:layout_weight="1"
                android:src="@drawable/ic_edit"
                android:background="@null">
            </ImageView>
            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp25"
                android:layout_weight="1"
                android:src="@drawable/ic_close"
                android:background="@null">
            </ImageView>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>